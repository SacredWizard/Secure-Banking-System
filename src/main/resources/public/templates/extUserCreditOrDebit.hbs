{{#partial "body"}}
    <div class="container">
        <!-- edit form column -->
        <form class="form-horizontal" role="form" method="POST" action="">
            <div class="form-group">
                <label class="col-lg-3 control-label">Account:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="number" min="1" id="id" name="id"
                           title="Account Number should be only digits" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Amount:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="amount" name="amount" pattern="^[\d]+[\.]?[\d]{0,2}$"
                           title="Enter correct amount with maximum 2 decimal places" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Description :</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="description" name="description" pattern="[a-zA-Z0-9 ]*" title="Description should not contain any characters" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-8">
                    <label for="typeOfAccount">Select Type of Account:</label>
                    <select class="form-control" id="creditDebitType" name="creditDebitType" required>
                        <option>CREDIT</option>
                        <option>DEBIT</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <input type="submit" id="save" class="btn btn-primary" value="Submit">
                </div>
            </div>
        </form>
    </div>
{{/partial}}


{{> extUserBase}}