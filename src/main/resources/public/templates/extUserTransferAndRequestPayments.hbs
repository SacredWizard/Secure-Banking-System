{{#partial "body"}}
    <div class="container">
        <!-- edit form column -->
        <form class="form-horizontal" role="form" method="POST" action="">
            <div class="form-group">
                <label class="col-lg-3 control-label">From Account:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="fromAccount" name="fromAccount" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">To Account:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="toAccount" name="toAccount" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Amount:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="amount" name="amount" required>
                </div>
            </div>
            <div class="form-group">
                        <div class="col-lg-8">
                            <label for="typeOfRequest">Select Type of Request:</label>
                            <select class="form-control" id="typeOfRequest" name="typeOfRequest" required>
                                <option>Transfer Payment</option>
                                <option>Request Payment</option>
                            </select>
                        </div>
                    </div>
            <div class="form-group">
                <div class="col-md-8">
                    <input type="submit" id="save" class="btn btn-primary" value="Submit">
                </div>
            </div>
        </form>
    </div>
{{/partial}}

{{> extUserBase}}