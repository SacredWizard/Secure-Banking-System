{{#partial "head"}}

{{/partial}}
{{#partial "body"}}
    <div >
        <table id="results">
            <thead>
            <tr>
                <th>Request Id</th>
                <th>From Account</th>
                <th>To Account</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Approve/Deny</th>
            </tr>
            </thead>
            <tbody>
            {{#each result }}
            <tr>
                <td align="center">{{ requestId }}</td>
                <td align="center">{{ fromAccount }}</td>
                <td align="center">{{ toAccount }}</td>
                <td align="center">{{ description }}</td>
                <td align="center">{{ amount }}</td>
                <td align="center">

                    <form method="post" action="/api/v1/customer/approveRequest" class="inline">
                        <input type="text" name="requestId" value="{{requestId}}" style="display: none">
                        <input id="update" class="btn btn-primary" type="submit" name="approve"
                               value="Approve"/>
                    </form>
                    <form method="post" action="/api/v1/customer/denyRequest" class="inline">
                        <input type="text" name="requestId" value="{{requestId}}" style="display: none">
                        <input id="delete" class="btn btn-danger" type="submit" name="deny"
                               value="Deny"/>
                    </form>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/partial}}

{{#partial "scripts"}}
{{/partial}}
{{> extUserBase}}