{{#partial "head"}}

{{/partial}}
{{#partial "body"}}
    <div>
        <table id="results" width="100%">
            <thead>
            <tr>
                <th align="center">Request ID</th>
                <th align="center">User ID</th>
                <th align="center">Account Type</th>
                <th align="center">Account Number</th>
                <th align="center">Initial Deposit</th>
                <th align="center">Approve/Deny</th>
            </tr>
            </thead>
            <tbody>

            {{#each result }}
                <tr>
                    <td align="center">{{ requestId }}</td>
                    <td align="center">{{ userName }}</td>
                    <td align="center">{{ accountType }}</td>
                    <td align="center">{{ accountNumber }}</td>
                    <td align="center">{{ initialDeposit }}</td>

                    <td align="center">
                        <form method="post" action="/api/v1/tier2/approveNewAccountReq" class="inline">
                            <input type="text" name="requestId" value="{{requestId}}" style="display: none">
                            <input id="update" class="btn btn-primary" type="submit" name="approve"
                                   value="Approve"/>
                        </form>
                        <form method="post" action="/api/v1/tier2/denyNewAccountReq" class="inline">
                            <input type="text" name="requestId" value="{{requestId}}" style="display: none">
                            <input id="delete" class="btn btn-danger" type="submit" name="deny"
                                   value="Deny"/>
                        </form>

                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/partial}}

{{#partial "scripts"}}
{{/partial}}
{{> tier2Base}}