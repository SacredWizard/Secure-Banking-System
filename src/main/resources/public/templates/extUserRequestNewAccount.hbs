
{{#partial "body"}}
    <div>
    <form class="form-horizontal" role="form" method="POST" action="/api/v1/customer/requestAccount">
        <div class="form-group">
            <label class="col-lg-3 control-label">Initial Amount: </label>
            <div class="col-lg-8">
                <input class="form-control" type="text" id="initialDeposit" name="initialDeposit" pattern="^[\d]+[\.]?[\d]{0,2}$" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <label for="accountType">Select list:</label>
                <select class="form-control" id="accountType" name="accountType">
                    <option>CURRENT</option>
                    <option>SAVINGS</option>
                    <option>CHECKING</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" id="save" class="btn btn-primary" value="Request">
            </div>
        </div>
    </form>
    </div>
{{/partial}}

